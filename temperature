from microbit import *

def temp():
    tem=temperature()
    display.scroll(str(tem)+"degr√©")
    if 19<tem<23:
        display.scroll("Tout va bien")
        display.show(Image.HAPPY)      
    else:       
        display.scroll("Le climatiseur ne fonctionne pas")
        display.show(Image.SAD)
               
temp()
